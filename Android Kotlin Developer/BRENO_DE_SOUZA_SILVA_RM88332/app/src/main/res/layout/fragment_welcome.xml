<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.WelcomeFragment">

    <TextView
        android:id="@+id/initialText"
        android:text="@string/welcome_introduction_text"
        android:textSize="@dimen/font_size_md"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <Button
        android:id="@+id/buttonListCountries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_introduction_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/initialText"
        android:textColor="@color/white"
    />

</androidx.constraintlayout.widget.ConstraintLayout>